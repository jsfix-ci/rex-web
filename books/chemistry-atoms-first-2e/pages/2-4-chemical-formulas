                                              <mspace width="0.2em"/>
                                              <msup>
                                                <mrow>
                                                  <mn>10</mn>
                                                </mrow>
                                                <mrow>
                                                  <mn>23</mn>
                                                </mrow>
                                              </msup>
                                              <mspace width="0.2em"/>
                                              <mtext>atoms</mtext>
                                            </mrow>
                                            <mrow>
                                              <menclose
                                                notation="horizontalstrike"
                                              >
                                                <mrow>
                                                  <mtext>mol</mtext>
                                                </mrow>
                                              </menclose>
                                            </mrow>
                                          </mfrac>
                                        </mrow>
                                        <mo>)</mo>
                                        <mspace width="0.2em"/>
                                      </mrow>
