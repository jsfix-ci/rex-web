                                            </mrow>
                                            <mrow>
                                              <mn>63.55</mn>
                                              <mspace width="0.2em"/>
                                              <menclose
                                                notation="horizontalstrike"
                                              >
                                                <mtext>g</mtext>
                                              </menclose>
