                                    <mtext>Δ</mtext>
                                    <mstyle mathvariant="italic">
                                      <mtext>T</mtext>
                                    </mstyle>
                                    <mo>=</mo>
                                    <mi>c</mi>
                                    <mspace width="0.2em"/>
                                    <mo>×</mo>
