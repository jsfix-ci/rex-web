                                    <mn>4</mn>
                                    <mo>=</mo>
                                    <mtext>A</mtext>
                                    <mo>+</mo>
                                    <mn>1</mn>
                                    <mo>,</mo>
                                    <mspace width="0.2em"/>
                                    <mtext>or A</mtext>
                                    <mo>=</mo>
                                    <mn>28</mn>
                                  </mrow>
                                </mrow>
                                <annotation-xml encoding="MathML-Content">
                                  <mrow>
                                    <mn>25</mn>
                                    <mo>+</mo>
                                    <mn>4</mn>
                                    <mo>=</mo>
