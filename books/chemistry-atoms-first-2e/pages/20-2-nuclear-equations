                                    <mo>+</mo>
                                    <mn>1</mn>
                                    <mo>,</mo>
                                    <mspace width="0.2em"/>
                                    <mtext>or A</mtext>
                                    <mo>=</mo>
                                    <mn>28</mn>
                                  </mrow>
                                </annotation-xml>
                              </semantics>
                            </math>
                          </div>
