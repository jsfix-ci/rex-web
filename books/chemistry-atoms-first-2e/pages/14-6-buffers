                                        <mo>[</mo>
                                        <mrow>
                                          <msup>
                                            <mtext>A</mtext>
                                            <mtext>−</mtext>
                                          </msup>
                                        </mrow>
                                        <mo>]</mo>
                                      </mrow>
                                    </mrow>
                                    <mrow>
                                      <mrow>
                                        <mtext>[HA]</mtext>
                                      </mrow>
                                    </mrow>
                                  </mfrac>
                                </mrow>
                              </mrow>
                              <annotation-xml encoding="MathML-Content">
                                <mrow>
                                  <msub>
                                    <mi>K</mi>
                                    <mtext>a</mtext>
                                  </msub>
                                  <mo>=</mo>
                                  <mspace width="0.2em"/>
                                  <mfrac>
                                    <mrow>
                                      <mrow>
                                        <mo stretchy="false">[</mo>
