                                  <mo stretchy="false">(</mo>
                                  <mi>a</mi>
                                  <mi>q</mi>
                                  <mo stretchy="false">)</mo>
                                  <mo>+</mo>
                                  <msub>
                                    <mtext>H</mtext>
                                    <mn>2</mn>
                                  </msub>
                                  <mtext>O</mtext>
                                  <mo stretchy="false">(</mo>
                                  <mi>l</mi>
                                  <mo stretchy="false">)</mo>
                                </mrow>
                              </mrow>
                              <annotation-xml encoding="MathML-Content">
                                <mrow>
                                  <msub>
                                    <mtext>H</mtext>
                                    <mn>3</mn>
                                  </msub>
                                  <msup>
                                    <mtext>O</mtext>
                                    <mtext>+</mtext>
                                  </msup>
                                  <mo stretchy="false">(</mo>
                                  <mi>a</mi>
                                  <mi>q</mi>
                                  <mo stretchy="false">)</mo>
                                  <mo>+</mo>
                                  <msub>
                                    <mrow>
                                      <mtext>HCO</mtext>
                                    </mrow>
                                    <mn>3</mn>
                                  </msub>
                                  <msup>
                                    <mrow/>
                                    <mtext>−</mtext>
                                  </msup>
                                  <mo stretchy="false">(</mo>
                                  <mi>a</mi>
                                  <mi>q</mi>
                                  <mo stretchy="false">)</mo>
                                  <mspace width="0.2em"/>
                                  <mo stretchy="false">⟶</mo>
                                  <mspace width="0.2em"/>
                                  <msub>
                                    <mtext>H</mtext>
                                    <mn>2</mn>
                                  </msub>
                                  <msub>
                                    <mrow>
                                      <mtext>CO</mtext>
                                    </mrow>
                                    <mn>3</mn>
                                  </msub>
                                  <mo stretchy="false">(</mo>
                                  <mi>a</mi>
                                  <mi>q</mi>
                                  <mo stretchy="false">)</mo>
                                  <mo>+</mo>
                                  <msub>
                                    <mtext>H</mtext>
                                    <mn>2</mn>
                                  </msub>
                                  <mtext>O</mtext>
                                  <mo stretchy="false">(</mo>
                                  <mi>l</mi>
                                  <mo stretchy="false">)</mo>
                                </mrow>
                              </annotation-xml>
                            </semantics>
                          </math>
                        </div>
                        <p
                          id="fs-idm109728256"
                        >An added hydroxide ion is removed by the reaction:</p>
                        <div data-type="equation" id="fs-idm145990368">
                          <math display="block">
                            <semantics>
                              <mrow>
                                <mrow>
