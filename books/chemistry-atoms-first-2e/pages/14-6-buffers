                                        <mtext>H</mtext>
                                        <mn>2</mn>
                                      </msub>
                                      <mtext>O</mtext>
                                      <mo stretchy="false">(</mo>
                                      <mi>l</mi>
                                      <mo stretchy="false">)</mo>
