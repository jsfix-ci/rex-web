                                  <mo>+</mo>
                                  <msub>
                                    <mtext>H</mtext>
                                    <mn>2</mn>
                                  </msub>
                                  <msub>
                                    <mrow>
                                      <mtext>CO</mtext>
                                    </mrow>
                                    <mn>3</mn>
                                  </msub>
