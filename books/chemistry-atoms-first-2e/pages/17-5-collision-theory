                                          <mrow>
                                            <mtext>ln</mtext>
                                            <mspace width="0.2em"/>
                                            <msub>
                                              <mi>k</mi>
                                              <mn>2</mn>
                                            </msub>
                                            <mspace width="0.2em"/>
                                            <mo>−</mo>
                                            <mspace width="0.2em"/>
                                            <mtext>ln</mtext>
                                            <mspace width="0.2em"/>
