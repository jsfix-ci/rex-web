                                <mi>g</mi>
                                <mo stretchy="false">)</mo>
                                <mspace width="0.2em"/>
                                <mo stretchy="false">⟶</mo>
                                <mspace width="0.2em"/>
                                <msub>
                                  <mrow>
                                    <mtext>CO</mtext>
                                  </mrow>
