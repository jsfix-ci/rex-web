                                                      <mi>T</mi>
                                                      <mn>2</mn>
                                                    </msub>
                                                  </mrow>
                                                </mfrac>
                                              </mrow>
                                              <mo>)</mo>
                                            </mrow>
                                            <mspace width="0.2em"/>
                                            <mo>−</mo>
                                            <mspace width="0.2em"/>
                                            <mrow>
                                              <mo>(</mo>
                                              <mrow>
                                                <mfrac>
                                                  <mn>1</mn>
                                                  <mrow>
                                                    <msub>
                                                      <mi>T</mi>
                                                      <mn>1</mn>
                                                    </msub>
                                                  </mrow>
                                                </mfrac>
                                              </mrow>
                                              <mo>)</mo>
                                            </mrow>
                                          </mrow>
                                        </mfrac>
                                      </mrow>
                                      <mo>)</mo>
                                    </mrow>
                                  </mrow>
                                </mrow>
                                <annotation-xml encoding="MathML-Content">
                                  <mrow>
                                    <msub>
                                      <mi>E</mi>
                                      <mtext>a</mtext>
                                    </msub>
