                                <mi>g</mi>
                                <mo stretchy="false">)</mo>
                                <mspace width="0.2em"/>
                                <mo stretchy="false">⟶</mo>
                                <mspace width="0.2em"/>
                                <mn>2</mn>
                                <mspace width="0.2em"/>
                                <msub>
                                  <mrow>
                                    <mtext>CO</mtext>
                                  </mrow>
                                  <mtext>2</mtext>
                                </msub>
                                <mo stretchy="false">(</mo>
                                <mi>g</mi>
                                <mo stretchy="false">)</mo>
                              </mrow>
                            </mrow>
                            <annotation-xml encoding="MathML-Content">
                              <mrow>
