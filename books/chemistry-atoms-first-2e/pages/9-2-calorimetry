                                  <mtext>g</mtext>
                                  <mo stretchy="false">)</mo>
                                  <mo stretchy="false">(</mo>
                                  <mn>28.5</mn>
                                  <mspace width="0.2em"/>
                                  <mtext>°C</mtext>
                                  <mo>−</mo>
                                  <mn>22.0</mn>
                                  <mspace width="0.2em"/>
                                  <mtext>°C</mtext>
                                  <mo stretchy="false">)</mo>
                                </mrow>
                              </mrow>
                              <annotation-xml encoding="MathML-Content">
                                <mrow>
                                  <mo stretchy="false">(</mo>
                                  <msub>
                                    <mi>c</mi>
                                    <mrow>
                                      <mtext>metal</mtext>
                                    </mrow>
                                  </msub>
                                  <mo stretchy="false">)</mo>
                                  <mo stretchy="false">(</mo>
                                  <mn>59.7</mn>
                                  <mspace width="0.2em"/>
                                  <mtext>g</mtext>
                                  <mo stretchy="false">)</mo>
                                  <mo stretchy="false">(</mo>
                                  <mn>28.5</mn>
                                  <mspace width="0.2em"/>
                                  <mtext>°C</mtext>
                                  <mo>−</mo>
                                  <mn>100.0</mn>
                                  <mspace width="0.2em"/>
                                  <mtext>°C</mtext>
                                  <mo stretchy="false">)</mo>
                                  <mo>=</mo>
                                  <mo stretchy="false">−(</mo>
                                  <mn>4.18</mn>
