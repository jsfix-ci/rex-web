                                      <mtext>J</mtext>
                                      <mo>+</mo>
                                      <mn>10,500</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>J</mtext>
                                      <mo stretchy="false">)</mo>
                                    </mtd>
                                  </mtr>
                                  <mtr>
                                    <mtd>
                                      <mo>=</mo>
                                      <mtext>−48,800 J</mtext>
                                      <mo>=</mo>
                                      <mtext>−48.8 kJ</mtext>
                                    </mtd>
                                  </mtr>
                                </mtable>
                              </mrow>
