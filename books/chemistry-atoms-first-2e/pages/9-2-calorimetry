                                      <mn>4.184</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>J/g °C</mtext>
                                      <mo stretchy="false">)</mo>
                                      <mo stretchy="false">(</mo>
                                      <mn>60.0</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>g</mtext>
                                      <mo stretchy="false">)</mo>
                                      <mo stretchy="false">(</mo>
                                      <mn>6.5</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>°C</mtext>
                                      <mo stretchy="false">)</mo>
                                    </mrow>
                                    <mrow>
                                      <mo stretchy="false">(</mo>
                                      <mn>59.7</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>g</mtext>
                                      <mo stretchy="false">)</mo>
                                      <mo stretchy="false">(</mo>
                                      <mn>−71.5</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>°C</mtext>
                                      <mo stretchy="false">)</mo>
                                    </mrow>
                                  </mfrac>
                                  <mspace width="0.2em"/>
                                  <mo>=</mo>
                                  <mn>0.38</mn>
                                  <mspace width="0.2em"/>
                                  <mtext>J/g °C</mtext>
                                </mrow>
                              </mrow>
                              <annotation-xml encoding="MathML-Content">
                                <mrow>
                                  <msub>
                                    <mi>c</mi>
                                    <mrow>
                                      <mtext>metal</mtext>
                                    </mrow>
                                  </msub>
                                  <mo>=</mo>
                                  <mspace width="0.2em"/>
                                  <mfrac>
                                    <mrow>
                                      <mo>−</mo>
                                      <mo stretchy="false">(</mo>
                                      <mn>4.184</mn>
                                      <mspace width="0.2em"/>
                                      <mtext>J/g °C</mtext>
                                      <mo stretchy="false">)</mo>
                                      <mo stretchy="false">(</mo>
                                      <mn>60.0</mn>
