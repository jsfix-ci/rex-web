                                  <mo stretchy="false">(</mo>
                                  <mi>g</mi>
                                  <mo stretchy="false">)</mo>
                                  <mover>
                                    <mo>→</mo>
                                    <mrow>
                                      <mspace width="0.7em"/>
                                      <mi>h</mi>
                                      <mi>v</mi>
                                      <mspace width="0.7em"/>
                                    </mrow>
                                  </mover>
                                  <mn>2</mn>
                                  <msub>
                                    <mtext>O</mtext>
