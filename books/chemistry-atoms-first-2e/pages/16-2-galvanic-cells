                                  </msub>
                                  <msub>
                                    <mo stretchy="false">)</mo>
                                    <mn>2</mn>
                                  </msub>
                                  <mo stretchy="false">(</mo>
                                  <mi>a</mi>
                                  <mi>q</mi>
                                  <mo stretchy="false">)</mo>
                                  <mo>║</mo>
                                  <mn>1</mn>
                                  <mspace width="0.2em"/>
                                  <mi>M</mi>
                                  <mspace width="0.2em"/>
                                  <msub>
                                    <mrow>
                                      <mtext>AgNO</mtext>
                                    </mrow>
                                    <mn>3</mn>
                                  </msub>
                                  <mo stretchy="false">(</mo>
                                  <mi>a</mi>
                                  <mi>q</mi>
                                  <mo stretchy="false">)</mo>
