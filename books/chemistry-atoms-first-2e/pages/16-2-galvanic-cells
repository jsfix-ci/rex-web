                                        <msup>
                                          <mtext>e</mtext>
                                          <mtext>−</mtext>
                                        </msup>
                                      </mtd>
                                    </mtr>
                                    <mtr>
                                      <mtd columnalign="left">
                                        <mtext>cathode (oxidation):</mtext>
                                      </mtd>
                                      <mtd columnalign="left">
                                        <mspace width="5em"/>
                                        <msup>
                                          <mrow>
                                            <mtext>Cu</mtext>
                                          </mrow>
                                          <mrow>
                                            <mn>2+</mn>
                                          </mrow>
                                        </msup>
                                        <mo stretchy="false">(</mo>
                                        <mi>a</mi>
                                        <mi>q</mi>
                                        <mo stretchy="false">)</mo>
                                        <mo>+</mo>
                                        <mn>2</mn>
                                        <msup>
                                          <mtext>e</mtext>
                                          <mtext>−</mtext>
                                        </msup>
                                        <mspace width="0.2em"/>
                                        <mo stretchy="false">⟶</mo>
                                        <mspace width="0.2em"/>
                                        <mtext>Cu</mtext>
                                        <mo stretchy="false">(</mo>
                                        <mi>s</mi>
                                        <mo stretchy="false">)</mo>
                                      </mtd>
                                    </mtr>
                                  </mtable>
                                </annotation-xml>
                              </semantics>
                            </math>
                          </div>
