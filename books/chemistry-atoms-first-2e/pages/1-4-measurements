                                    <mspace width="0.2em"/>
                                    <mo>×</mo>
                                    <mspace width="0.2em"/>
                                    <mn>2.00 cm</mn>
                                    <mo>=</mo>
                                    <msup>
                                      <mrow>
                                        <mtext>8.00 cm</mtext>
                                      </mrow>
                                      <mn>3</mn>
                                    </msup>
                                  </mrow>
                                </mrow>
                                <annotation-xml encoding="MathML-Content">
