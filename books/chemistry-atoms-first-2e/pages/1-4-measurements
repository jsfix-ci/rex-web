                                    <mfrac>
                                      <mrow>
                                        <mtext>mass</mtext>
                                      </mrow>
                                      <mrow>
                                        <mtext>volume</mtext>
                                      </mrow>
                                    </mfrac>
                                  </mrow>
                                </mrow>
                                <annotation-xml encoding="MathML-Content">
                                  <mrow>
                                    <mtext>density</mtext>
                                    <mo>=</mo>
                                    <mspace width="0.2em"/>
                                    <mfrac>
                                      <mrow>
