                        <div data-type="equation" id="fs-idp66123152">
                          <math display="block">
                            <semantics>
                              <mrow>
                                <mrow>
                                  <mtext>Δ</mtext>
                                  <mi>E</mi>
                                  <mo>=</mo>
                                  <mn>2.179</mn>
                                  <mspace width="0.2em"/>
                                  <mo>×</mo>
                                  <mspace width="0.2em"/>
                                  <msup>
                                    <mrow>
                                      <mn>10</mn>
                                    </mrow>
                                    <mrow>
                                      <mn>−18</mn>
                                    </mrow>
                                  </msup>
                                  <mrow>
                                    <mo>(</mo>
                                    <mrow>
                                      <mspace width="0.2em"/>
