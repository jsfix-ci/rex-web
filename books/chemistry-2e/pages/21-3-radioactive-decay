                                      </mrow>
                                      <mn>60</mn>
                                    </msubsup>
                                    <mtext>Co*</mtext>
                                  </mrow>
                                  <mspace width="0.2em"/>
                                  <mo stretchy="false">⟶</mo>
                                  <mspace width="0.2em"/>
