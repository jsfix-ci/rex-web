                                      <mo>+</mo>

                                      <msubsup>
                                        <mrow/>
                                        <mrow>
                                          <mn>1</mn>
                                        </mrow>
                                        <mn>1</mn>
                                      </msubsup>
                                      <mtext>p</mtext>

                                      <mspace width="0.2em"/>
                                      <mo stretchy="false">⟶</mo>
                                      <mspace width="0.2em"/>

                                      <msubsup>
                                        <mrow/>
                                        <mrow>
                                          <mspace width="0.5em"/>
                                          <mn>9</mn>
