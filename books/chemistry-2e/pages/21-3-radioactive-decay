                                      <mtext>O</mtext>
                                      <mn>2</mn>
                                    </msub>
                                  </mrow>
                                </annotation-xml>
                              </semantics>
                            </math> and
                            <math display="inline">
                              <semantics>
                                <mrow>
                                  <mrow>
                                    <msubsup>
                                      <mrow/>
                                      <mrow>
