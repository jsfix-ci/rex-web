                                    <msub>
                                      <mtext>O</mtext>
                                      <mn>2</mn>
                                    </msub>
                                  </mrow>
                                </mrow>
                                <annotation-xml encoding="MathML-Content">
                                  <mrow>
                                    <msubsup>
                                      <mrow/>
                                      <mrow>
                                        <mspace width="0.5em"/>
