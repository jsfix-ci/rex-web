                                    <mtext>C</mtext>

                                    <mtext>O</mtext>
                                  </mrow>
                                </annotation-xml>
                              </semantics>
                            </math> to
                            <math display="inline">
                              <semantics>
                                <mrow>
                                  <mrow>
                                    <msubsup>
                                      <mrow/>
                                      <mrow>
                                        <mspace width="0.5em"/>
                                        <mn>6</mn>
