                                          </mfrac>
                                          <mspace width="0.2em"/>
                                        </mrow>
                                        <mo>)</mo>
                                      </mrow>
                                      <mspace width="0.2em"/>
                                      <mo stretchy="false">⟶</mo>
                                      <mspace width="0.2em"/>
                                      <mi>t</mi>
                                      <mo>=</mo>
                                      <mo>−</mo>
                                      <mfrac>
                                        <mn>1</mn>
                                        <mi>λ</mi>
                                      </mfrac>
                                      <mspace width="0.2em"/>
                                      <mtext>ln</mtext>
                                      <mspace width="0.2em"/>
                                      <mrow>
                                        <mo>(</mo>
                                        <mrow>
                                          <mfrac>
                                            <mrow>
                                              <msub>
                                                <mrow>
                                                  <mtext>Rate</mtext>
                                                </mrow>
                                                <mi>t</mi>
                                              </msub>
                                            </mrow>
                                            <mrow>
                                              <msub>
                                                <mrow>
