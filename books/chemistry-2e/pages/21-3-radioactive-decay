                                        <mrow/>
                                        <mrow>
                                          <mspace width="0.5em"/>
                                          <mn>9</mn>
                                        </mrow>
                                        <mn>18</mn>
                                      </msubsup>
                                      <mtext>F</mtext>

                                      <mo>+</mo>

                                      <msubsup>
                                        <mrow/>
                                        <mrow>
                                          <mn>0</mn>
                                        </mrow>
                                        <mn>1</mn>
                                      </msubsup>
                                      <mtext>n</mtext>

