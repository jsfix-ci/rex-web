                                <mi>g</mi>
                                <mo stretchy="false">)</mo>
                                <mo>+</mo>
                                <msub>
                                  <mtext>6H</mtext>
                                  <mn>2</mn>
                                </msub>
                                <mtext>O</mtext>
                                <mo stretchy="false">(</mo>
                                <mi>l</mi>
                                <mo stretchy="false">)</mo>
                                <mspace width="0.2em"/>
                                <mo stretchy="false">⟶</mo>
                                <mspace width="0.2em"/>
                                <msub>
                                  <mtext>C</mtext>
                                  <mn>6</mn>
                                </msub>
                                <msub>
                                  <mtext>H</mtext>
                                  <mrow>
                                    <mn>12</mn>
                                  </mrow>
                                </msub>
                                <msub>
                                  <mtext>O</mtext>
                                  <mn>6</mn>
                                </msub>
                                <mo stretchy="false">(</mo>
                                <mi>s</mi>
                                <mo stretchy="false">)</mo>
                                <mo>+</mo>
                                <msub>
                                  <mtext>6O</mtext>
                                  <mn>2</mn>
                                </msub>
                                <mo stretchy="false">(</mo>
                                <mi>g</mi>
                                <mo stretchy="false">)</mo>
                                <mo>,</mo>
                              </mrow>
                            </mrow>
                            <annotation-xml encoding="MathML-Content">
                              <mrow>
                                <msub>
                                  <mrow>
                                    <mtext>6CO</mtext>
                                  </mrow>
                                  <mn>2</mn>
                                </msub>
                                <mo stretchy="false">(</mo>
                                <mi>g</mi>
                                <mo stretchy="false">)</mo>
                                <mo>+</mo>
                                <msub>
                                  <mtext>6H</mtext>
                                  <mn>2</mn>
                                </msub>
                                <mtext>O</mtext>
                                <mo stretchy="false">(</mo>
                                <mi>l</mi>
                                <mo stretchy="false">)</mo>
                                <mspace width="0.2em"/>
                                <mo stretchy="false">⟶</mo>
                                <mspace width="0.2em"/>
                                <msub>
                                  <mtext>C</mtext>
                                  <mn>6</mn>
                                </msub>
                                <msub>
                                  <mtext>H</mtext>
                                  <mrow>
                                    <mn>12</mn>
                                  </mrow>
                                </msub>
