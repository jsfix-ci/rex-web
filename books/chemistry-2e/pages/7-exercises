<p id="fs-idp19768176">(a) 1<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">p</em><sup>5</sup></p>
<p id="fs-idm80153488">(b) 1<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">p</em><sup>6</sup>3<em data-effect="italics">s</em><sup>2</sup></p>
<p id="fs-idp65373872">(c) 1<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">p</em><sup>6</sup>3<em data-effect="italics">s</em><sup>2</sup>3<em data-effect="italics">p</em><sup>6</sup>4<em data-effect="italics">s</em><sup>2</sup>3<em data-effect="italics">d</em><sup>10</sup></p>
<p id="fs-idp23448016">(d) 1<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">p</em><sup>6</sup>3<em data-effect="italics">s</em><sup>2</sup>3<em data-effect="italics">p</em><sup>6</sup>4<em data-effect="italics">s</em><sup>2</sup>3<em data-effect="italics">d</em><sup>10</sup>4<em data-effect="italics">p</em><sup>4</sup></p>
<p id="fs-idm116147776">(e) 1<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">s</em><sup>2</sup>2<em data-effect="italics">p</em><sup>6</sup>3<em data-effect="italics">s</em><sup>2</sup>3<em data-effect="italics">p</em><sup>6</sup>4<em data-effect="italics">s</em><sup>2</sup>3<em data-effect="italics">d</em><sup>10</sup>4<em data-effect="italics">p</em><sup>1</sup></p>
</div></div>
