                                                  <mrow>
                                                    <mn>0.514</mn>
                                                    <mspace width="0.2em"/>
                                                    <mtext>nm</mtext>
                                                  </mrow>
                                                  <mo>)</mo>
                                                </mrow>
                                              </mrow>
                                              <mn>2</mn>
                                            </msup>
                                            <mo>+</mo>
                                            <msup>
                                              <mrow>
                                                <mrow>
                                                  <mo>(</mo>
                                                  <mrow>
                                                    <mn>0.514</mn>
                                                    <mspace width="0.2em"/>
                                                    <mtext>nm</mtext>
                                                  </mrow>
                                                  <mo>)</mo>
                                                </mrow>
                                              </mrow>
                                              <mn>2</mn>
                                            </msup>
                                          </mrow>
                                          <mrow>
                                            <mn>16</mn>
                                          </mrow>
                                        </mfrac>
                                      </mrow>
                                    </msqrt>
                                    <mspace width="0.2em"/>
                                    <mo>=</mo>
                                    <mtext>0.182 nm</mtext>
                                    <mspace width="0.2em"/>
                                    <mo stretchy="false">(</mo>
                                    <mtext>1.82 Å</mtext>
                                    <mo stretchy="false">)</mo>
                                    <mspace width="0.2em"/>
                                    <msup>
                                      <mrow>
                                        <mtext>for a Cl</mtext>
                                      </mrow>
