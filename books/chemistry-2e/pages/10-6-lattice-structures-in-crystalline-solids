                                    <mo stretchy="false">(</mo>
                                    <mtext>1.82 Å</mtext>
                                    <mo stretchy="false">)</mo>
                                    <mspace width="0.2em"/>
                                    <msup>
                                      <mrow>
                                        <mtext>for a Cl</mtext>
                                      </mrow>
                                      <mtext>−</mtext>
                                    </msup>
